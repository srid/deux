category:            Web
build-type:          Simple
cabal-version:       >=1.10

executable backend
  main-is: Main.hs
  ghc-options: -Wall -O2 -threaded -rtsopts -with-rtsopts=-N
  exposed-modules:
      Main
    , Backend
    , Backend.Server
    , Backend.Finance
  -- other-extensions:    
  build-depends:
      base >=4.9 && <4.11
    , bytestring
    , optparse-applicative
    , common
    , dhall
    , directory
    , filepath
    , lens
    , lifted-async
    , lifted-base
    , mtl
    , pandoc
    , scientific
    , servant
    , servant-server
    , sv
    , text
    , validation
    , wai
    , wai-cors
    , wai-extra
    , warp
  hs-source-dirs: src
  default-language: Haskell2010
